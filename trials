#exploring built-in functions
age = "17" #str
print(type(age)) 
converted_age = int(age) 
print(type(converted_age))
print(converted_age <18) #17<18 true
##str() function allows us to take 
# numerical values and convert them to strings.
password = 98079
old_password = "81k39"
print(str(password) == old_password)
print(type(password))#int
print(type(old_password))#str

price = 9.99
print(int(price))# we use int() to remove float round it up
#for the opposite to turn into a float we use:
weeks = 12
print( float (weeks)) #12.0
#THE FOLLOWING, we use bool value 0 to indicate false and anything with content to indicate true
pets = 3
kids = 0
has_pets = bool(pets)#true
has_kids = bool(kids)#false

print(has_pets)
print(has_kids)
#convert reponse into trueif detail string not empty
detail = "I like it"
response = bool(detail)
print(response) #true

